# Application
APP_NAME=Prial
APP_VERSION=0.1.0
DEBUG=false
SECRET_KEY=your-secret-key-min-32-chars-change-this

# Database (Supabase — Transaction Pooler URL)
# Supabase Dashboard → Project Settings → Database → Connection string → URI
# Önemli: sonu ?sslmode=require olmalı, asyncpg için postgresql+asyncpg:// prefix'i kullan
DATABASE_URL=postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?sslmode=require

# Database Migration (Supabase — Direct Connection, Alembic için)
# Supabase Dashboard → Project Settings → Database → Connection string → URI (Direct)
DATABASE_MIGRATION_URL=postgresql+asyncpg://postgres:[password]@db.[project-ref].supabase.co:5432/postgres?sslmode=require

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (Railway'de Redis servisi ekleyince otomatik gelir)
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@prial.app
EMAIL_FROM_NAME=Prial

# Firebase (Push Notifications)
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Scraping
SCRAPE_INTERVAL_MINUTES=30
SCRAPE_CONCURRENCY=5
PLAYWRIGHT_HEADLESS=true

# CORS (mobil app ve web için)
ALLOWED_ORIGINS=http://localhost:8081,https://your-production-domain.com
